<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="uniquindio.edu.co.gym.controller.PersonasController">
    <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Personas" styleClass="h1"/>

        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- TAB RECEPCIONISTAS -->
                <Tab text="Recepcionistas">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <HBox spacing="10">
                            <TextField promptText="Nombre"   styleClass="form-control" fx:id="textNombreR"/>
                            <TextField promptText="ID"       styleClass="form-control" fx:id="textIdR"/>
                            <TextField promptText="Teléfono" styleClass="form-control" fx:id="textTelefonoR"/>
                            <TextField promptText="Turno"    styleClass="form-control" fx:id="textTurnoR"/>
                            <TextField promptText="Direccion" styleClass="form-control" fx:id="textDireccionR"/>
                            <TextField promptText="Contraseña" styleClass="form-control" fx:id="textContrasenaR"/>
                            <DatePicker promptText="Fecha de nacimiento" styleClass="form-control" fx:id="textFechaNR"/>
                            <Button fx:id="btnSeleccionar" text="Seleccionar Imagen" />
                            <Button text="Nuevo" styleClass="btn btn-primary" onAction="#guardarRecepcionista"/>
                        </HBox>
                        <TableView fx:id="tablaRecepcionistas" prefHeight="420">
                            <columns>
                                <TableColumn text="Nombre" prefWidth="160" fx:id="colNombreR"/>
                                <TableColumn text="ID" prefWidth="120" fx:id="colIdR"/>
                                <TableColumn text="Teléfono" prefWidth="140" fx:id="colTelefonoR"/>
                                <TableColumn text="Turno" prefWidth="120" fx:id="colTurnoR"/>
                                <TableColumn text="Direccion" prefWidth="120" fx:id="colDireccionR"/>
                                <TableColumn text="Fecha de nacimiento" prefWidth="200" fx:id="colFechaNR"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>


                <!-- TAB ENTRENADORES -->
                <Tab text="Entrenadores">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <HBox spacing="10">
                            <TextField promptText="Nombre" styleClass="form-control" fx:id="textNombreE"/>
                            <TextField promptText="ID" styleClass="form-control" fx:id="textIdE"/>
                            <TextField promptText="Telefono" styleClass="form-control" fx:id="textTelefonoE"/>
                            <TextField promptText="Turno" styleClass="form-control" fx:id="textTurnoE"/>
                            <TextField promptText="Dirección" styleClass="form-control" fx:id="textDireccionE"/>
                            <DatePicker promptText="Fecha de nacimiento" styleClass="form-control" fx:id="textFechaNE"/>
                            <Button fx:id="btnSeleccionarEntre" text="Seleccionar Imagen" />
                            <Button text="Nuevo" styleClass="btn btn-primary" onAction="#guardarEntrenador"/>
                        </HBox>
                        <TableView prefHeight="420" fx:id="tablaEntrenador">
                            <columns>
                                <TableColumn text="Nombre" prefWidth="180" fx:id="colNombreE"/>
                                <TableColumn text="ID" prefWidth="120" fx:id="colIdE"/>
                                <TableColumn text="Telefono" prefWidth="120" fx:id="colTelefonoE"/>
                                <TableColumn text="Turno" prefWidth="120" fx:id="colTurnoE"/>
                                <TableColumn text="Dirección" prefWidth="120" fx:id="colDireccionE"/>
                                <TableColumn text="Fecha de nacimiento" prefWidth="180" fx:id="colFechaNE"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

                <!-- TAB USUARIOS -->
                <Tab text="Usuarios">
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <!-- SUBTAB ESTUDIANTES -->
                            <Tab text="Estudiantes">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <HBox spacing="10">
                                        <TextField promptText="Nombre" styleClass="form-control"/>
                                        <TextField promptText="Programa" styleClass="form-control"/>
                                        <TextField promptText="Semestre" styleClass="form-control"/>
                                        <TextField promptText="Facultad" styleClass="form-control"/>
                                        <TextField promptText="Contraseña" styleClass="form-control"/>
                                        <Button fx:id="btnSeleccionarEst" text="Seleccionar Imagen" />
                                        <Button text="Nuevo" styleClass="btn btn-primary"/>
                                    </HBox>
                                    <TableView prefHeight="380">
                                        <columns>
                                            <TableColumn text="Nombre" prefWidth="180"/>
                                            <TableColumn text="Programa" prefWidth="180"/>
                                            <TableColumn text="Semestre" prefWidth="120"/>
                                            <TableColumn text="Facultad" prefWidth="160"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>

                            <!-- SUBTAB TRABAJADORES -->
                            <Tab text="Trabajadores UQ">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <HBox spacing="10">
                                        <TextField promptText="Nombre" styleClass="form-control"/>
                                        <TextField promptText="Cargo" styleClass="form-control"/>
                                        <TextField promptText="Área" styleClass="form-control"/>
                                        <TextField promptText="Contraseña" styleClass="form-control"/>
                                        <Button fx:id="btnSeleccionarTraba" text="Seleccionar Imagen" />
                                        <Button text="Nuevo" styleClass="btn btn-primary"/>
                                    </HBox>
                                    <TableView prefHeight="380">
                                        <columns>
                                            <TableColumn text="Nombre" prefWidth="220"/>
                                            <TableColumn text="Cargo" prefWidth="160"/>
                                            <TableColumn text="Área" prefWidth="160"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>

                            <!-- SUBTAB EXTERNOS -->
                            <Tab text="Externos">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <HBox spacing="10">
                                        <TextField promptText="Nombre" styleClass="form-control"/>
                                        <TextField promptText="Ocupación" styleClass="form-control"/>
                                        <TextField promptText="Contraseña" styleClass="form-control"/>
                                        <Button fx:id="btnSeleccionarExter" text="Seleccionar Imagen" />
                                        <Button text="Nuevo" styleClass="btn btn-primary"/>
                                    </HBox>
                                    <TableView prefHeight="380">
                                        <columns>
                                            <TableColumn text="Nombre" prefWidth="220"/>
                                            <TableColumn text="Ocupación" prefWidth="220"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>
                        </tabs>
                    </TabPane>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
</AnchorPane>
