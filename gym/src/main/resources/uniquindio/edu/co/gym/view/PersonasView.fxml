<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="uniquindio.edu.co.gym.controller.PersonasController">
    <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Personas" styleClass="h1"/>

        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- TAB RECEPCIONISTAS -->
                <Tab text="Recepcionistas">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <HBox spacing="10">
                            <TextField promptText="Nombre"   styleClass="form-control" fx:id="textNombreR"/>
                            <TextField promptText="ID"       styleClass="form-control" fx:id="textIdR"/>
                            <TextField promptText="Teléfono" styleClass="form-control" fx:id="textTelefonoR"/>
                            <TextField promptText="Turno"    styleClass="form-control" fx:id="textTurnoR"/>
                            <TextField promptText="Direccion" styleClass="form-control" fx:id="textDireccionR"/>
                            <TextField promptText="Contraseña" styleClass="form-control" fx:id="textContrasenaR"/>
                            <DatePicker promptText="Fecha de nacimiento" styleClass="form-control2" fx:id="textFechaNR"/>
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="btnSeleccionar" styleClass="btn" text="Seleccionar Imagen" onAction="#seleccionarImagenRecepcionista"/>
                            <Button fx:id="btnNuevoRecep" text="Nuevo" styleClass="btn" onAction="#guardarRecepcionista"/>
                            <ProgressIndicator fx:id="loaderRecepcionista" prefWidth="20" prefHeight="20" visible="false"/>

                        </HBox>
                        <TableView fx:id="tablaRecepcionistas" prefHeight="420">
                            <columns>
                                <TableColumn text="Nombre" prefWidth="160" fx:id="colNombreR"/>
                                <TableColumn text="ID" prefWidth="120" fx:id="colIdR"/>
                                <TableColumn text="Teléfono" prefWidth="140" fx:id="colTelefonoR"/>
                                <TableColumn text="Turno" prefWidth="120" fx:id="colTurnoR"/>
                                <TableColumn text="Direccion" prefWidth="120" fx:id="colDireccionR"/>
                                <TableColumn text="Fecha de nacimiento" prefWidth="200" fx:id="colFechaNR"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>


                <!-- TAB ENTRENADORES -->


                <Tab text="Entrenadores">
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>

                            <!-- REGISTRAR ENTRENADOR -->
                            <Tab text="Registrar">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>

                                    <HBox spacing="10">
                                        <TextField fx:id="textNombreE" promptText="Nombre" styleClass="form-control"/>
                                        <TextField fx:id="textIdE" promptText="ID" styleClass="form-control"/>
                                        <TextField fx:id="textTelefonoE" promptText="Telefono" styleClass="form-control"/>
                                        <TextField fx:id="textTurnoE" promptText="Turno" styleClass="form-control"/>
                                        <TextField fx:id="textDireccionE" promptText="Dirección" styleClass="form-control"/>
                                        <DatePicker fx:id="textFechaNE" promptText="Fecha nacimiento" styleClass="form-control2"/>
                                    </HBox>

                                    <HBox spacing="10">
                                        <Button text="Seleccionar Imagen" styleClass="btn" onAction="#seleccionarImagenEntrenador"/>
                                        <Button fx:id="btnNuevoEntrenador" text="Nuevo" styleClass="btn" onAction="#guardarEntrenador"/>
                                        <ProgressIndicator fx:id="loaderEntrenador" visible="false"/>
                                    </HBox>

                                    <TableView fx:id="tablaEntrenador" prefHeight="420">
                                        <columns>
                                            <TableColumn text="Nombre" fx:id="colNombreE" prefWidth="160"/>
                                            <TableColumn text="ID" fx:id="colIdE" prefWidth="120"/>
                                            <TableColumn text="Telefono" fx:id="colTelefonoE" prefWidth="130"/>
                                            <TableColumn text="Turno" fx:id="colTurnoE" prefWidth="120"/>
                                            <TableColumn text="Dirección" fx:id="colDireccionE" prefWidth="150"/>
                                            <TableColumn text="Fecha nac." fx:id="colFechaNE" prefWidth="150"/>
                                        </columns>
                                    </TableView>

                                </VBox>
                            </Tab>


                            <!-- ACTUALIZAR ENTRENADOR -->
                            <Tab text="Actualizar">
                                <VBox spacing="12">
                                    <padding>
                                        <Insets top="20" right="20" bottom="20" left="20"/>
                                    </padding>

                                    <HBox spacing="10">
                                        <TextField fx:id="updateIdE" promptText="ID del entrenador" styleClass="form-control"/>
                                        <Button text="Buscar" styleClass="btn" onAction="#buscarEntrenador"/>
                                    </HBox>

                                    <Separator/>

                                    <HBox spacing="10">
                                        <TextField fx:id="updateTelE" promptText="Nuevo teléfono" styleClass="form-control"/>
                                        <TextField fx:id="updateDirE" promptText="Nueva dirección" styleClass="form-control"/>
                                        <TextField fx:id="updateTurnoE" promptText="Nuevo turno" styleClass="form-control"/>
                                    </HBox>

                                    <Button text="Actualizar" styleClass="btn" onAction="#actualizarEntrenador"/>

                                </VBox>
                            </Tab>


                            <!-- ELIMINAR ENTRENADOR -->
                            <Tab text="Eliminar">
                                <VBox spacing="12">
                                    <padding>
                                        <Insets top="20" right="20" bottom="20" left="20"/>
                                    </padding>

                                    <TextField fx:id="deleteIdE" promptText="ID del entrenador a eliminar" styleClass="form-control"/>

                                    <Button text="Eliminar Entrenador"
                                            styleClass="btn"
                                            onAction="#eliminarEntrenador"/>

                                </VBox>
                            </Tab>

                        </tabs>
                    </TabPane>
                </Tab>


                <!-- TAB USUARIOS -->
                <Tab text="Usuarios">
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <!-- SUBTAB ESTUDIANTES -->
                            <Tab text="Estudiantes">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <HBox spacing="8">
                                        <TextField promptText="Nombre" styleClass="form-control" fx:id="textNombreEs"/>
                                        <TextField promptText="ID" styleClass="form-control" fx:id="textIdEs"/>
                                        <TextField promptText="Telefono" styleClass="form-control" fx:id="textTelefonoEs"/>
                                        <TextField promptText="Dirección" styleClass="form-control" fx:id="textDireccionEs"/>
                                        <DatePicker promptText="Fecha nacimiento" styleClass="form-control2" fx:id="dateFechaNEs"/>
                                        <DatePicker promptText="Fecha creacion" styleClass="form-control2" fx:id="dateFechaCEs"/>
                                        <TextField promptText="Programa" styleClass="form-control" fx:id="textProgramaEs"/>
                                        <TextField promptText="Semestre" styleClass="form-control" fx:id="textSemestreEs"/>
                                        <TextField promptText="Facultad" styleClass="form-control" fx:id="textFacultadEs"/>

                                    </HBox>
                                    <HBox spacing="10">
                                        <ComboBox fx:id="comboMembresiaEs" promptText="Membresía" styleClass="form-control2"/>
                                        <Button fx:id="btnSeleccionarEst" styleClass="btn" text="Seleccionar Imagen" onAction="#seleccionarImagenEstudiante"/>
                                        <Button fx:id="btnNuevoEstudiante" text="Nuevo" styleClass="btn" onAction="#guardarEstudiante"/>
                                        <ProgressIndicator fx:id="loaderEstudiante" prefWidth="20" prefHeight="20" visible="false"/>

                                    </HBox>
                                    <TableView prefHeight="380" fx:id="tablaEstudiante">
                                        <columns>
                                            <TableColumn text="Nombre" prefWidth="120" fx:id="colNombreEs"/>
                                            <TableColumn text="ID" prefWidth="120" fx:id="colIdEs"/>
                                            <TableColumn text="Telefono" prefWidth="120" fx:id="colTelefonoEs"/>
                                            <TableColumn text="Dirección" prefWidth="120" fx:id="colDireccionEs"/>
                                            <TableColumn text="Fecha Nacimiento" prefWidth="160" fx:id="colFechaNEs"/>
                                            <TableColumn text="Fechas Creacion" prefWidth="160" fx:id="colFechaCEs"/>
                                            <TableColumn text="Programa" prefWidth="120" fx:id="colProgramaEs"/>
                                            <TableColumn text="Semestre" prefWidth="120" fx:id="colSemestreEs"/>
                                            <TableColumn text="Facultad" prefWidth="120" fx:id="colFacultadEs"/>
                                            <TableColumn text="Membresía" prefWidth="180" fx:id="colMembresiaEs"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>

                            <!-- SUBTAB TRABAJADORES -->
                            <Tab text="Trabajadores UQ">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <HBox spacing="10">
                                        <TextField promptText="Nombre" styleClass="form-control" fx:id="textNombreT"/>
                                        <TextField promptText="ID" styleClass="form-control" fx:id="textIdT"/>
                                        <TextField promptText="Telefono" styleClass="form-control" fx:id="textTelefonoT"/>
                                        <TextField promptText="Dirección" styleClass="form-control" fx:id="textDireccionT"/>
                                        <DatePicker promptText="Fecha nacimiento" styleClass="form-control2" fx:id="dateFechaNT"/>
                                        <DatePicker promptText="Fecha creacion" styleClass="form-control2" fx:id="dateFechaCT"/>
                                        <TextField promptText="Cargo" styleClass="form-control" fx:id="textCargoT"/>
                                        <TextField promptText="Área" styleClass="form-control" fx:id="textAreaT"/>

                                    </HBox>
                                    <HBox spacing="10">
                                        <ComboBox fx:id="comboMembresiaT" promptText="Membresía" styleClass="form-control2"/>
                                        <Button fx:id="btnSeleccionarTraba" styleClass="btn" text="Seleccionar Imagen" onAction="#seleccionarImagenTrabajador"/>
                                        <Button fx:id="btnNuevoTrabajador" text="Nuevo" styleClass="btn" onAction="#guardarTrabajadoresUq"/>
                                        <ProgressIndicator fx:id="loaderTrabajador" prefWidth="20" prefHeight="20" visible="false"/>

                                    </HBox>
                                    <TableView prefHeight="380" fx:id="tablaTrabajadorUQ">
                                        <columns>
                                            <TableColumn text="Nombre" prefWidth="120" fx:id="colNombreT"/>
                                            <TableColumn text="ID" prefWidth="120" fx:id="colIdT"/>
                                            <TableColumn text="Telefono" prefWidth="120" fx:id="colTelefonoT"/>
                                            <TableColumn text="Dirección" prefWidth="120" fx:id="colDireccionT"/>
                                            <TableColumn text="Fecha Nacimiento" prefWidth="160" fx:id="colFechaNT"/>
                                            <TableColumn text="Fechas Creacion" prefWidth="160" fx:id="colFechaCT"/>
                                            <TableColumn text="Cargo" prefWidth="160" fx:id="colCargoT"/>
                                            <TableColumn text="Área" prefWidth="160" fx:id="colAreaT"/>
                                            <TableColumn text="Membresía" prefWidth="180" fx:id="colMembresiaT"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>

                            <!-- SUBTAB EXTERNOS -->
                            <Tab text="Externos">
                                <VBox spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <HBox spacing="10">
                                        <TextField promptText="Nombre" styleClass="form-control" fx:id="textNombreEx"/>
                                        <TextField promptText="ID" styleClass="form-control" fx:id="textIdEx"/>
                                        <TextField promptText="Telefono" styleClass="form-control" fx:id="textTelefonoEx"/>
                                        <TextField promptText="Dirección" styleClass="form-control" fx:id="textDireccionEx"/>
                                        <DatePicker promptText="Fecha nacimiento" styleClass="form-control2" fx:id="dateFechaNEx"/>
                                        <DatePicker promptText="Fecha creacion" styleClass="form-control2" fx:id="dateFechaCEx"/>
                                        <TextField promptText="Ocupación" styleClass="form-control" fx:id="textOcupacionEx"/>

                                    </HBox>
                                    <HBox spacing="10">
                                        <ComboBox fx:id="comboMembresiaEx" promptText="Membresía" styleClass="form-control2"/>
                                        <Button fx:id="btnSeleccionarExter" styleClass="btn" text="Seleccionar Imagen" onAction="#seleccionarImagenExterno"/>
                                        <Button fx:id="btnNuevoExterno" text="Nuevo" styleClass="btn" onAction="#guardarExterno"/>
                                        <ProgressIndicator fx:id="loaderExterno" prefWidth="20" prefHeight="20" visible="false"/>
                                    </HBox>
                                    <TableView prefHeight="380" fx:id="tablaExterno">
                                        <columns>
                                            <TableColumn text="Nombre" prefWidth="120" fx:id="colNombreEx"/>
                                            <TableColumn text="ID" prefWidth="120" fx:id="colIdEx"/>
                                            <TableColumn text="Telefono" prefWidth="120" fx:id="colTelefonoEx"/>
                                            <TableColumn text="Dirección" prefWidth="120" fx:id="colDireccioEx"/>
                                            <TableColumn text="Fecha Nacimiento" prefWidth="160" fx:id="colFechaNEx"/>
                                            <TableColumn text="Fechas Creacion" prefWidth="160" fx:id="colFechaCEx"/>
                                            <TableColumn text="Ocupación" prefWidth="220" fx:id="colOcupacionEx"/>
                                            <TableColumn text="Membresía" prefWidth="180" fx:id="colMembresiaEx"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>
                        </tabs>
                    </TabPane>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
</AnchorPane>