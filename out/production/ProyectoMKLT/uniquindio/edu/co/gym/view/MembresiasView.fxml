<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="uniquindio.edu.co.gym.controller.MembresiasController"
      spacing="12">
    <Label text="Membresías" styleClass="h1"/>
    <HBox spacing="10">
        <TextField promptText="ID" styleClass="form-control"/>
        <TextField promptText="Costo" styleClass="form-control"/>
        <DatePicker promptText="Fecha inicio"/>
        <DatePicker promptText="Fecha vencimiento"/>
        <CheckBox text="Activa"/>
        <ComboBox promptText="Beneficio (Acompañante, Proteína, Valoración)" prefWidth="320"/>
        <Button text="Crear" styleClass="btn btn-primary"/>
    </HBox>

    <TableView prefHeight="480">
        <columns>
            <TableColumn text="ID" prefWidth="80"/>
            <TableColumn text="Costo" prefWidth="100"/>
            <TableColumn text="Inicio" prefWidth="140"/>
            <TableColumn text="Vence" prefWidth="140"/>
            <TableColumn text="Estado" prefWidth="100"/>
            <TableColumn text="Beneficio" prefWidth="220"/>
        </columns>
    </TableView>
</VBox>
