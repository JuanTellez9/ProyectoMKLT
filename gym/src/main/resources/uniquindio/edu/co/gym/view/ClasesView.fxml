<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="uniquindio.edu.co.gym.controller.ClasesController">

    <VBox spacing="12"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0">

        <Label text="Clases" styleClass="h1"/>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- TAB CLASES -->
                <Tab text="Clases">
                    <VBox spacing="10">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                        <HBox spacing="10">
                            <TextField fx:id="textId" styleClass="form-control" promptText="ID Clase"/>
                            <TextField fx:id="textCupoMaximo" styleClass="form-control" promptText="Cupo máximo"/>
                            <ComboBox fx:id="comboHoraInicio" styleClass="form-control2" promptText="Hora inicio"/>
                            <ComboBox fx:id="comboHoraFin" styleClass="form-control2" promptText="Hora fin"/>
                            <ComboBox fx:id="comboClaseGrupal" styleClass="form-control2" promptText="Clase grupal"/>
                            <ComboBox fx:id="comboDiaSemana"  styleClass="form-control2" promptText="Día semana"/>
                            <ComboBox fx:id="comboEntrenador" styleClass="form-control2"  promptText="Entrenador"/>
                            <Button text="Nueva Clase" styleClass="btn" onAction="#registrarClase"/>
                        </HBox>

                        <TableView fx:id="tableClase" prefHeight="420">
                            <columns>
                                <TableColumn text="ID" fx:id="colId" prefWidth="100"/>
                                <TableColumn text="Clase" fx:id="colNombre" prefWidth="160"/>
                                <TableColumn text="Inicio" fx:id="colInicio" prefWidth="100"/>
                                <TableColumn text="Fin" fx:id="colFin" prefWidth="100"/>
                                <TableColumn text="Cupo" fx:id="colCupo" prefWidth="80"/>
                                <TableColumn text="Día" fx:id="colDia" prefWidth="120"/>
                                <TableColumn text="Entrenador" fx:id="colEntrenador" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

                <!-- TAB USUARIOS INSCRITOS -->
                <Tab text="Usuarios Inscritos">
                    <VBox spacing="10">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                        <HBox spacing="10">
                            <ComboBox fx:id="comboClases" promptText="Seleccione clase" styleClass="form-control2"/>
                            <Button text="Ver inscritos" onAction="#mostrarUsuarios" styleClass="btn"/>
                        </HBox>

                        <TableView fx:id="tablaUsuarios" prefHeight="420">
                            <columns>
                                <TableColumn text="Nombre Usuario" fx:id="colNombreUsuario" prefWidth="200"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

                <!-- TAB REGISTRAR USUARIO EN CLASE -->
                <Tab text="Registrar Usuario en Clase">
                    <VBox spacing="10">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                        <HBox spacing="10">
                            <ComboBox fx:id="comboClasesRegistro" promptText="Clase" styleClass="form-control2"/>
                            <TextField fx:id="usuarioRegisClass" promptText="ID Clase" styleClass="form-control"/>
                            <Button text="Registrar" onAction="#registrarUsuarioEnClase" styleClass="btn"/>
                        </HBox>

                    </VBox>
                </Tab>

            </tabs>
        </TabPane>
    </VBox>

</AnchorPane>
